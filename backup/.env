# ------------------------------------------------------------------------
# KONFIGURASI DASAR SCRIPT
# ------------------------------------------------------------------------

# RTSP_SUBTYPE: 0 = main stream, 1 = sub stream, dsb.
RTSP_SUBTYPE=0

# TEST_CHANNEL = "off" (default).
#   - Jika "off", script memproses semua channel 1..CHANNEL_COUNT.
#   - Jika berisi "1,2", script hanya memproses channel-channel tersebut.
TEST_CHANNEL=off

# CHANNEL_COUNT = jumlah total channel yang diproses jika TEST_CHANNEL=off.
CHANNEL_COUNT=16

# CHUNK_DURATION = durasi perekaman (detik) untuk mode FULL (rolling).
# (Sebelumnya tertulis CHUNK_DURATIO, mungkin ada typo).
CHUNK_DURATION=300

# ENABLE_JSON_LOOK = "true"/"false"
#   - true  => membolehkan script membaca info tertentu dari JSON.
#   - false => abaikan JSON untuk setting tertentu (pakai ENV saja).
ENABLE_JSON_LOOK=false


# ------------------------------------------------------------------------
# TWEAK KONFIGURASI PENGHEMATAN CPU (pipeline motion/object)
# ------------------------------------------------------------------------

# FRAME_SKIP = proses hanya 1 dari N frame (default: 5).
#   - Makin besar, makin hemat CPU, tapi gerakan pendek bisa terlewat.
FRAME_SKIP=8

# DOWNSCALE_RATIO = rasio pengecilan resolusi frame sebelum motion/object detect.
#   - 0.4 => 40% dari ukuran asli (lebar & tinggi).
#   - Makin kecil => CPU lebih ringan, tapi detail berkurang.
DOWNSCALE_RATIO=0.4

# MOTION_SLEEP = jeda (detik) antar loop di pipeline motion/object.
#   - Makin besar => FPS analisis turun => CPU lebih hemat,
#     tetapi deteksi gerak bisa sedikit lebih lambat.
MOTION_SLEEP=0.3

# FREEZE_BLACK_INTERVAL = interval (detik) untuk men-skip freeze/black check.
#   - 0  => cek freeze/black di setiap putaran (perilaku lama).
#   - 1800 => hanya sekali setiap 30 menit per channel.
FREEZE_BLACK_INTERVAL=1800


# ------------------------------------------------------------------------
# MODE BACKUP DAN KONFIGURASI UMUM
# ------------------------------------------------------------------------

# BACKUP_MODE = {full|motion|motion_obj}
#   - full        => rekam terus-menerus (rolling CHUNK_DURATION).
#   - motion      => rekam hanya saat motion.
#   - motion_obj  => rekam saat motion + object detection.
BACKUP_MODE=motion

# MAX_RECORD = durasi max (detik) per potongan rekaman di mode motion/motion_obj.
MAX_RECORD=600

# MOTION_TIMEOUT = jika tidak ada gerakan setelah sekian detik,
#                  hentikan rekaman mode motion/motion_obj.
MOTION_TIMEOUT=10

# ENABLE_FREEZE_CHECK = "true"/"false"
#   - true  => jalankan freeze-check (ffmpeg freezedetect).
#   - false => skip freeze-check.
ENABLE_FREEZE_CHECK=false

# ENABLE_BLACKOUT = "true"/"false"
#   - true  => jalankan black-check.
#   - false => skip black-check.
ENABLE_BLACKOUT=true

# LOOP_ENABLE = "true"/"false"
#   - true  => setelah selesai 1 putaran channel, script tunggu CHECK_INTERVAL & ulangi.
#   - false => hanya jalankan 1 kali lalu selesai.
LOOP_ENABLE=true


# ------------------------------------------------------------------------
# PARAMETER FREEZE DETECT (JIKA ENABLE_FREEZE_CHECK=true)
# ------------------------------------------------------------------------
# FREEZE_SENSITIVITY  => seberapa sensitif freeze detection (detik).
FREEZE_SENSITIVITY=6.0

# FREEZE_RECHECK_TIMES => berapa kali recheck freeze agar lebih pasti.
FREEZE_RECHECK_TIMES=5

# FREEZE_RECHECK_DELAY => jeda (detik) antar recheck freeze.
FREEZE_RECHECK_DELAY=3.0