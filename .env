# ===========================
# KONFIGURASI RTSP
# ===========================
STREAM_TITLE="KC. Ayani"
RTSP_IP=172.16.10.252
NVR_SUBNET=172.16.1.0/24
TEST_CHANNEL=1,3,4          # Daftar channel spesifik yang ingin divalidasi. 
CHANNELS=1                  # Jika TEST_CHANNEL='off', maka gunakan range 1..CHANNELS.
RTSP_SUBTYPE=1              # 0 = main stream, 1 = sub stream (sesuai kebutuhan).
NVR_ENABLE=false            # true => Gunakan subnet (NVR_SUBNET) untuk mencari banyak IP; 
                            # false => Hanya satu IP (RTSP_IP).
ENABLE_RTSP_VALIDATION=true
SKIP_ABDULLAH_CHECK=false   # (opsional) Contoh validasi nama user tertentu, bisa diabaikan.

# ===========================
# KONFIGURASI LOOP VALIDATION
# ===========================
LOOP_ENABLE=true            # true => Script validate_cctv.py akan terus berulang (loop).
CHECK_INTERVAL=300          # Interval dalam detik antar setiap pengecekan ulang (5 menit).

# ===========================
# SENSITIVITAS FREEZE FRAMES
# ===========================
FREEZE_SENSITIVITY=0.5

# ===========================
# KONFIGURASI SYSLOG
# ===========================
SYSLOG_SERVER=syslog-ng
SYSLOG_PORT=1514
ENABLE_SYSLOG=true

# ===========================
# DEBUGGING & TIMEZONE
# ===========================
DEBUG=true
TIMEZONE=Asia/Makassar


# ===========================
# KONFIGURASI HDD MONITORING
# (Jika memang masih diperlukan oleh sistem)
# ===========================
LOG_FILE=/mnt/Data/Syslog/rtsp/hdd_monitor.log
AUTO_DELETE=/mnt/Data/Backup

# ===========================
# DIREKTORI & PATH
# ===========================
POOL_NAME=/mnt/Data
BACKUP_DIR=/mnt/Data/Backup
SYSLOG_DIR=/mnt/Data/Syslog
NAS_MOUNT_POINT=/mnt/Data/Backup
RTSP_OUTPUT_DIR=/data