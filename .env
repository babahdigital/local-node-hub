########################################
# 1. Konfigurasi Monitoring Resource
########################################
# Interval (detik) untuk loop pemantauan resource
RESOURCE_MONITOR_INTERVAL=10

########################################
# 2. Konfigurasi Validasi / Streaming
########################################
# Interval (detik) untuk loop validasi pipeline (black/freeze/motion)
CHECK_INTERVAL=60

# Freeze-check
FREEZE_SENSITIVITY=6.0
FREEZE_RECHECK_TIMES=5
FREEZE_RECHECK_DELAY=3.0
FREEZE_COOLDOWN=15

# Black-detect
BLACK_DETECT_THRESHOLD=0.95

# Flag aktif/non-aktif
ENABLE_FREEZE_CHECK=true
ENABLE_BLACKOUT=true
ENABLE_RTSP_VALIDATION=true
ENABLE_OBJECT_DETECTION=true
LOOP_ENABLE=true

########################################
# 3. Konfigurasi RTSP / Streaming
########################################
STREAM_TITLE="KC. Ayani"
RTSP_IP=172.16.10.252
RTSP_SUBTYPE=0
TEST_CHANNEL=off
CHANNEL_COUNT=16
CHANNELS=16
MAX_RECORD=600
MOTION_TIMEOUT=10
SKIP_ABDULLAH_CHECK=false

########################################
# 4. Konfigurasi NVR (Jika diperlukan)
########################################
NVR_ENABLE=false
NVR_SUBNET=172.16.1.0/24

# ===========================
# KONFIGURASI SYSLOG
# ===========================
SYSLOG_SERVER=syslog-ng
SYSLOG_PORT=1514
CLEAN_ON_STARTUP=true
ENABLE_SYSLOG=true
ENABLE_FILE_LOG=false
ENABLE_STREAM_LOG=true

# ===========================
# DEBUGGING & TIMEZONE
# ===========================
DEBUG=true
TIMEZONE=Asia/Makassar

# ===========================
# KONFIGURASI HDD MONITORING
# (Jika memang masih diperlukan oleh sistem)
# ===========================
LOG_FILE=/mnt/Data/Syslog/rtsp/hdd_monitor.log
AUTO_DELETE=/mnt/Data/Backup

# ===========================
# DIREKTORI & PATH
# ===========================
POOL_NAME=/mnt/Data
BACKUP_DIR=/mnt/Data/Backup
SYSLOG_DIR=/mnt/Data/Syslog
NAS_MOUNT_POINT=/mnt/Data/Backup
RTSP_OUTPUT_DIR=/data

# Penjelasan Singkat
# RESOURCE_MONITOR_INTERVAL
# Interval untuk loop pemantauan resource (CPU, RAM, dsb.). Misal 10 detik.

# CHECK_INTERVAL
# Interval untuk loop validasi streaming (cek freeze, cek blackout, dsb.). Misal 60 detik.

# FREEZE_SENSITIVITY, FREEZE_RECHECK_TIMES, FREEZE_RECHECK_DELAY
# Parameter untuk freeze-check (dalam sekian kali percobaan). Contoh:
# FREEZE_SENSITIVITY=6.0 (durasi minimal freeze untuk dideteksi).
# FREEZE_RECHECK_TIMES=5 (berapa kali tes freeze).
# FREEZE_RECHECK_DELAY=3.0 (jeda antartes freeze).

# FREEZE_COOLDOWN
# Jika skrip Anda butuh jeda cooldown setelah freeze, diatur di sini.

# BLACK_DETECT_THRESHOLD
# Ambang batas gambar hitam (biasanya 0.98). Makin mendekati 1.0 berarti harus nyaris 100% area hitam.

# ENABLE_FREEZE_CHECK, ENABLE_BLACKOUT, ENABLE_RTSP_VALIDATION, ENABLE_OBJECT_DETECTION, LOOP_ENABLE
# Flag boolean (true/false) untuk mengaktifkan/menonaktifkan fitur tertentu.
# Contoh:
# ENABLE_OBJECT_DETECTION=true => maka module object_detection dijalankan.
# ENABLE_FREEZE_CHECK=true => jalankan cek freeze.

# STREAM_TITLE, RTSP_IP, RTSP_SUBTYPE, TEST_CHANNEL, CHANNEL_COUNT
# Parameter dasar streaming.
# TEST_CHANNEL=1,3,4 => channel apa saja yang di-spawn thread-nya.
# Jika TEST_CHANNEL=off, maka script akan mengambil range 1..CHANNEL_COUNT.

# NVR_ENABLE, NVR_SUBNET
# Dipakai jika Anda punya logika scanning subnet (jika script masih memerlukannya).
# Jika NVR_ENABLE=false, biasanya tidak dipakai.

# Dengan struktur ini:
# Tidak ada duplikasi CHECK_INTERVAL (yang tadinya 300 dan 60 sekaligus).
# FREEZE_SENSITIVITY juga jelas hanya satu nilai (tidak bercampur antara 6.0 dan 8.0).
# Semua angka yang sebelumnya hard-coded bisa diubah secara dinamis via environment.
