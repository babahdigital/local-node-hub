# ===========================
# KONFIGURASI RTSP
# ===========================
STREAM_TITLE="KC. Ayani"
RTSP_IP=172.16.10.252
NVR_SUBNET=172.16.1.0/24

# Daftar channel spesifik yang ingin divalidasi.
TEST_CHANNEL=1,3,4 

# Jika TEST_CHANNEL='off', maka gunakan range 1..CHANNELS.
CHANNELS=1

# 0 = main stream, 1 = sub stream (sesuai kebutuhan)
RTSP_SUBTYPE=1

# true => Gunakan subnet (NVR_SUBNET) untuk mencari banyak IP; 
# false => Hanya satu IP (RTSP_IP).
NVR_ENABLE=false            

ENABLE_RTSP_VALIDATION=true
SKIP_ABDULLAH_CHECK=false

# ===========================
# KONFIGURASI LOOP VALIDATION
# ===========================

# true => Script validate_cctv.py akan terus berulang (loop)
LOOP_ENABLE=true

# Interval dalam detik antar setiap pengecekan ulang (5 menit).
CHECK_INTERVAL=300

# ===========================
# SENSITIVITAS FREEZE FRAMES
# ===========================
FREEZE_SENSITIVITY=0.5

# RESOURCE_STATE_PATH=
# /mnt/Data/Syslog/resource/resource_monitor_state.json

# ===========================
# KONFIGURASI SYSLOG
# ===========================
SYSLOG_SERVER=syslog-ng
SYSLOG_PORT=1514
ENABLE_SYSLOG=true

# ===========================
# DEBUGGING & TIMEZONE
# ===========================
DEBUG=true
TIMEZONE=Asia/Makassar

# ===========================
# KONFIGURASI HDD MONITORING
# (Jika memang masih diperlukan oleh sistem)
# ===========================
LOG_FILE=/mnt/Data/Syslog/rtsp/hdd_monitor.log
AUTO_DELETE=/mnt/Data/Backup

# ===========================
# DIREKTORI & PATH
# ===========================
POOL_NAME=/mnt/Data
BACKUP_DIR=/mnt/Data/Backup
SYSLOG_DIR=/mnt/Data/Syslog
NAS_MOUNT_POINT=/mnt/Data/Backup
RTSP_OUTPUT_DIR=/data