"/mnt/Data/Syslog/default/default.log" {
    size 10M
    rotate 7
    compress
    delaycompress
    missingok
    notifempty
    copytruncate
    su abdullah abdullah
    create 0644 abdullah abdullah
    postrotate
        docker exec syslog-ng kill -HUP 1
    endscript
}

